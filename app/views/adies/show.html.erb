<section>
  <div class="row small-up-1 large-up-2">
    <section class="column">
      <%= image_tag("adies/#{@adie.adie_image}", class:"show_photo") %>
    </section>
    <section class="column">
      <h2> <%= @adie.first_name + " " + @adie.last_name %> </h2>
      <h3> Cohort: <%= @adie.cohort %> </h3>
      <h3> Pronouns: <%= @adie.pref_pronouns %> </h3>
      <h3> Email: <%= @adie.email %> </h3>

      <% if @adie.github_username != nil %>
        <h3> Github Username: <%= link_to @adie.github_username, "https://github.com/#{@adie.github_username}", target: '_blank' %> </h3>
      <% else %>
        <h3>Github Username:</h3>
      <% end %>
      <% if  @adie.twitter_handle != nil%>
        <h3> Twitter Handle: <%= link_to @adie.twitter_handle, "https://twitter.com/#{@adie.twitter_handle}", target: '_blank' %> </h3>
      <% else %>
        <h3>Twitter Handle:</h3>
      <% end %>

      <h3> Linkedin: <%= link_to @adie.linkedin, "#{@adie.linkedin}", target: '_blank' %> </h3>
      <h3> Internship Company: <%= @adie.internship_company %> </h3>
      <h3> Currently At: <%= @adie.current_company %> </h3>

      <%= button_to "Edit Profile", {action: "edit", id: @adie.id}, method: :get, :class => 'button' %>
      <%= button_to "Delete Profile", {action: "destroy", id: @adie.id}, method: :delete,  data: {confirm: "Are you sure you want to delete this?"}, :class => 'button alert' %>
    </section>
  </div>
</section>

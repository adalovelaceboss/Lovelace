<section>
  <div class="row small-up-1 large-up-2">
    <section class="column">
      <%= image_tag("employees/#{@employee.staff_image}", class: "show_photo") %>
    </section>
    <section class="column">
      <h2> <%= @employee.first_name + " " + @employee.last_name %> </h2>
      <h3> Pronouns: <%= @employee.pref_pronouns %> </h3>
      <h3> Email: <%= @employee.email %> </h3>

      <% if @employee.github_username != nil %>
        <h3> Github Username: <%= link_to @employee.github_username, "https://github.com/#{@employee.github_username}", target: '_blank' %> </h3>
      <% else %>
        <h3>Github Username:</h3>
      <% end %>

      <% if @employee.twitter_handle != nil %>
        <h3> Twitter Handle: <%= link_to @employee.twitter_handle, "https://twitter.com/#{@employee.twitter_handle}", target: '_blank' %> </h3>
      <% else %>
        <h3>Twitter Handle:</h3>
      <% end %>

      <h3> Linkedin: <%= link_to @employee.linkedin, "#{@employee.linkedin}", target: '_blank' %> </h3>
      <h3> Areas of Expertise: <%= @employee.expertise_areas %> </h3>

      <%= button_to "Edit Profile", {action: "edit", id: @employee.id}, method: :get, :class => 'button' %>
      <%= button_to "Delete Profile", {action: "destroy", id: @employee.id}, method: :delete,  data: {confirm: "Are you sure you want to delete this?"}, :class => 'button alert' %>
    </section>
  </div>
</section>
